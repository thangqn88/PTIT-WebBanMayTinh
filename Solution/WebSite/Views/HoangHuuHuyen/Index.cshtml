@using WebSite.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<NhaSX> lst = (List<NhaSX>)ViewData["list"];
}

<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-responsive">
            <thead>
                <tr>
                    <td>STT</td>
                    <td>Ma</td>
                    <td>Ten</td>
                </tr>
            </thead>
            <tbody>
                @for(int i= 0; i < lst.Count; i++)
                {
                    <tr>
                        <td>@(i+1)</td>
                        <td>@lst[i].MaSX</td>
                        <td>@lst[i].TenSX</td>
                    </tr>
                }
                
            </tbody>
        </table>
        <form action="~/HoangHuuHuyen/Them" method="post">
            <input type="text"  name="ten"/>
            <button type="submit">Them</button>
        </form>
    </div>
</div>


