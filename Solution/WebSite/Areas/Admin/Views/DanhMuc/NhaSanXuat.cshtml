@using WebSite.Models;
@{
    ViewBag.Title = "NhaSX";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    List<NhaSX> lst = (List<NhaSX>)ViewData["list"];
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-info">
            <div class="panel-heading"><i class="fa fa-edit fa-fw"></i> Nhà Sản Xuất</div>
            <div class="panel-body">
                <form class="form-inline text-center" action="~/Admin/DanhMuc/insertNhaSX" method="post">
                    <div class="form-group">
                        <label for="email">Nhà SX:</label>
                        <input type="text" class="form-control" name="ten">
                    </div>
                    <button type="submit" class="btn btn-default">Thêm</button>
                </form>

                <table class="table table-bordered table-responsive" id="dataTables">
                    <thead>
                        <tr class="text-center">
                            <th width="9%"></th>
                            <th>STT</th>
                            <th>Mã</th>
                            <th>Tên NSX</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < lst.Count; i++)
                        {
                            <tr>
                                <td>
                                    <a class="btn btn-default btn-sm"><em class="glyphicon glyphicon-edit"></em></a>
                                    <a class="btn btn-danger btn-sm"><em class="glyphicon glyphicon-trash"></em></a>
                                </td>
                                <td>@(i+1)</td>
                                <td>@lst[i].MaSX</td>
                                <td>@lst[i].TenSX</td>
                            </tr>
                        }
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#dataTables').DataTable({
            responsive: true
        });
    });

</script>
